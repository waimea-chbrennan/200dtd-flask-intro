{% extends 'pages/base.jinja' %}

{% block title %}
    Critical Warning!
{% endblock %}

{% block content %}
    <article>
        <h2>Please enter your sensitive details!</h2>
        <form  method="POST" action="/processForm">
            <fieldset>
                <label>
                    Your Name
                    <input name="name" type="text" placeholder="Your Name" required>
                </label>
                <label>
                    Your Age
                    <input name="age" type="number" placeholder="20" min="0" max="100" required>
                </label>

            </fieldset>

            <input type="submit" value="Submit?">
        
        </form>
    </article>
{% endblock %}